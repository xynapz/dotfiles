# Penpot Configuration
PENPOT_FLAGS=enable-registration enable-login-with-password disable-email-verification

# Public URI (change if accessing from different machine)
PENPOT_PUBLIC_URI=http://localhost:9001

# Database Configuration
POSTGRES_INITDB_ARGS=--data-checksums
POSTGRES_DB=penpot
POSTGRES_USER=penpot
POSTGRES_PASSWORD=penpot

# Backend Configuration
PENPOT_DATABASE_URI=postgresql://penpot-postgres/penpot
PENPOT_DATABASE_USERNAME=penpot
PENPOT_DATABASE_PASSWORD=penpot

# Redis Configuration (using correct container name)
PENPOT_REDIS_URI=redis://penpot-redis/0

# Assets Storage
PENPOT_ASSETS_STORAGE_BACKEND=assets-fs
PENPOT_STORAGE_ASSETS_FS_DIRECTORY=/opt/data/assets

# Telemetry (optional - disable if you want)
PENPOT_TELEMETRY_ENABLED=false

# SMTP Configuration (optional - only if you want email)
# PENPOT_SMTP_DEFAULT_FROM=no-reply@yourdomain.com
# PENPOT_SMTP_DEFAULT_REPLY_TO=no-reply@yourdomain.com
# PENPOT_SMTP_HOST=smtp.gmail.com
# PENPOT_SMTP_PORT=587
# PENPOT_SMTP_USERNAME=example@gmail.com
# PENPOT_SMTP_PASSWORD=
# PENPOT_SMTP_TLS=true
# PENPOT_SMTP_SSL=false