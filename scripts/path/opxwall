#!/usr/bin/env bash

WALL_DIR="$HOME/Pictures/Wallpapers/"
DELAY=120   # seconds between switches
TRANSITION="fade"
DURATION=2

# Ensure swww is running
pgrep swww-daemon > /dev/null || swww-daemon &

sleep 1  # give it a moment to start

while true; do
    for img in "$WALL_DIR"/*.{jpg,jpeg,png,webp}; do
        [ -f "$img" ] || continue
        swww img "$img" \
            --transition-type "$TRANSITION" \
            --transition-duration "$DURATION"
        sleep "$DELAY"
    done
done
